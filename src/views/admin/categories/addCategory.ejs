<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

    <body>
        <%- include('../partials/header') %>

            <div class="addProduct">
                <legend>AGREGAR Categoria</legend>
                <form action="/admin/categorias" id="form" method="POST">
                    <div>
                        <label for="name">Nombre de la Categoria</label>
                        <input type="text" name="name" id="name" placeholder="Ej: Vegetariana" value="<%= (locals.old && old.name) ? old.name : "" %>">
                        <% if (locals.errors && errors.name) { %>
                            <small id="errorBackName"><%= errors.name.msg%></small>
                        <% } %>
                        <small id="errorName" style="color: red;"></small>
                    </div>
                    <div>
                        <small id="errorSubmit" style="color: red"></small>
                    </div>
                    <div>
                        <button type="submit">Crear</button>
                    </div>
                </form>
            </div>
            <%- include('../partials/footer') %>
            <script src="/js/Admin/addCategoryValidator.js"></script>
    </body>
</html>