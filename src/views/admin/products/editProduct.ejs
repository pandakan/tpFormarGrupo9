<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head")  %> 
<body>
  <%- include('../partials/header') %> 

  <div class="addProduct">
    <legend>Editar Producto: <%= producto.name  %> </legend>
    <form action="/admin/productos/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div>
          <label for="name">Nombre del producto</label>
          <input type="text" name="name" id="name" placeholder="Ej: Pizza Muzzarella" value="<%= producto.name  %>">
          <% if (locals.errors && errors.name) { %>
            <small><%= errors.name.msg%></small>
          <% } %>
        </div>
        <div>
          <label for="price">Precio del producto</label>
          <input type="number" name="price" id="price" placeholder="Ej: 1000" value="<%= producto.price  %>">
          <% if (locals.errors && errors.price) { %>
            <small><%= errors.price.msg%></small>
          <% } %>
        </div>
        <div>
          <label for="category">Categorias</label>
          <select name="categoryId">
            <option selected hidden>Categoría</option>
            <% categorias.forEach(categoria => { %>
              <option value="<%=categoria.id  %>"  <%= (locals.old && old.categoryId) && old.categoryId === categoria.id || categoria.id === producto.category_id ? "selected" : "" %>><%=categoria.name  %></option>
            <% }) %> 
            <!--<option value="1">Comun</option>-->
            <!--<option value="2">Vegetariana</option>-->
          </select>  
          <% if (locals.errors && errors.categoryId) { %>
            <small><%= errors.categoryId.msg%></small>
          <% } %>             
        </div>
        <div>
          <label>Imagen Actual</label>
          <img src="/images/products/<%= image.imageName %>" alt="">
        </div>
        <div>
          <label for="inputFile">Cambiar Imagen</label>
          <input type="file" id="inputFile" name="image"/>
        </div>
        <div id="stock">
          <input <%= producto.stock ? "checked" : "" %>   name="stock" type="checkbox" role="switch" id="stock">
          <label for="stock">Stock disponible</label>
        </div>
        <div>
          <label for="description">Descripción</label>
          <textarea name="description" id="description" rows="4"><%= producto.description %></textarea>
        </div>
        <div>
          <button type="submit">Editar</button>
        </div>
    </form>
</div>

  <%- include('../partials/footer')  %> 
    
</body>
</html>