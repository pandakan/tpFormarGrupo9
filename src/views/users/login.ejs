<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head")  %> 

<body>
    <div class="container">
        <header class="user">
            <nav class="main-nav">
                <div class="header_menuButton">
                    <button id="hamburguer_desplegable">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                </div>
            </nav>
            <img id="logo" src="/images/logofinal.svg" alt="logotipo">
            <a href="/productos/carrito"><i class="fa-solid fa-cart-shopping"></i></a>
            <nav class="main-nav-menu">
                <div class="header_menuClose">
                    <i class="fa-solid fa-arrow-left"></i>
                </div>
                <ul class="header_menu">
                    <li><a href="/">Inicio</a></li>
                    <li><a href="/#menu">Menú</a></li>
                    <li><a href="/#nosotros">Nosotros</a></li>
                    <li><a href="/#reservaTuMesa">Reservas</a></li>
                </ul>
                
            </nav>

        </header>
        <a href="#" class="a_boton"><button class="boton">Reserva Ya!</button></a>


        <section class="formularioLogin">
            <h2>Inicia Sesión</h2>
            <form action="/users/login" method="post">
                <div>
                    <input type="email" name="email" placeholder="Correo Electrónico">
                    <% if (locals.errors && errors.email) { %>
                        <span class="error-message"><%= errors.email.msg %></span>
                    <% } %>
                </div>
                <div>
                    <input type="password" name="password" placeholder="Contraseña">
                    <% if (locals.errors && errors.password) { %>
                        <span class="error-message"><%= errors.password.msg %></span>
                    <% } %>
                </div>
                <% if (locals.errors && errors.custom) { %>
                    <span class="error-message"><%= errors.custom.msg %></span>
                <% } %>
                <div>
                    <button type="submit">Entrar</button>
                </div>
                <span>¿No tienes una cuenta? <a href="/users/registro">Registrate</a></span>
            </form>
        </section>

        <%- include("../partials/footer")  %> 
    </div>
    <script src="/js/header.js"></script>
</body>

</html>