<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>

    <body>
        <div class="container">

            <%- include("../partials/header") -%> 

            <a href="#" class="a_boton"><button class="boton">Reserva Ya!</button></a>

            <main class="forms-container">
                <h2>Formulario de Registro</h2>
                <hr/>

                <form class="form-register" action="/users/registro" method="post" enctype="multipart/form-data">
                    <div class="input-container">
                        <input type="text" class="input-style" id="name" name="name" placeholder="Nombre de Usuario" value="<%= (locals.old && old.name) ? old.name : "" %>"/>
                        <% if (locals.errors && errors.name) { %>
                            <span class="error-message"><%= errors.name.msg %></span>
                        <% } %>
                        <small id="errorName" style="color: red;"></small>
                    </div>

                    <div class="input-container">
                        <input type="email" class="input-style" id="email" name="email" placeholder="Ingrese su Mail" value="<%= (locals.old && old.email) ? old.email : "" %>" />
                        <% if (locals.errors && errors.email) { %>
                            <span class="error-message"><%= errors.email.msg %></span>
                        <% } %>
                        <small id="errorEmail" style="color: red;"></small>
                    </div>

                    <div class="input-container">
                        <input type="password" class="input-style" id="passwd" name="password" placeholder="Ingrese su clave" />
                        <% if (locals.errors && errors.password) { %>
                            <span class="error-message"><%= errors.password.msg %></span>
                        <% } %>
                        <small id="errorPasswd" style="color: red;"></small>
                    </div>

                    <div class="input-container">
                        <input type="password" class="input-style" name="password2" placeholder="Confirme su contraseÃ±a" />
                        <% if (locals.errors && errors.password2) { %>
                            <span class="error-message"><%= errors.password2.msg %></span>
                        <% } %>
                        
                    </div>

                    <div class="input-container">
                        <input type="file" class="input-style" name="avatar" id="avatar" placeholder="Avatar">
                        <small id="errorFile" style="color: red;"></small>
                    </div>

                    <div class="input_check-container">
                        <nav>
                            <input name="check" type="checkbox" value="" id="activo">
                            <label for="activo">
                                Aceptos los Terminos y condiciones
                            </label>
                        </nav>
                        <% if (locals.errors && errors.check) { %>
                            <span class="error-message"><%= errors.check.msg %></span>
                        <% } %>
                        <small id="errorTC" style="color: red;"></small>
                    </div>
                    <div>
                        <span class="btn-container">
                            <button class="btn" type="submit">Crear Cuenta</button></span>
                    </div>
                </form>
            </main>

            <%- include("../partials/footer") %>
        </div>
        <script src="/js/header.js"></script>
        <script src="/js/registroValidadorFront.js"></script>
    </body>

</html>